# Toolbox Environment Configuration
# Copy this file to .toolbox.env and customize as needed

# Toolbox container name (for distrobox)
TOOLBOX_NAME=vllm-toolbox

# Base image for distrobox container
BASE_IMAGE=docker.io/ubuntu:24.04

# Workspace directory where vLLM will be cloned and built
WORK_DIR=/workspace

# vLLM version to build (can be a branch name, tag, or commit hash)
VLLM_VERSION=main

# Virtual environment directory
VENV_DIR=/opt/venv

# Pip cache directory
PIP_CACHE_DIR=/workspace/.pip-cache

# Force rebuild: remove existing venv and vllm directory before building
# Set to 1 to force, 0 to use existing
FORCE_REBUILD=0

# ROCm GPU architecture (gfx1151 = Strix Halo)
PYTORCH_ROCM_ARCH=gfx1151

# Override GPU version for ROCm
HSA_OVERRIDE_GFX_VERSION=11.5.1

# ROCm installation directory
ROCM_HOME=/opt/rocm

# Number of parallel build jobs (defaults to CPU core count)
MAX_JOBS=

# CPU only build environment
NOGPU=true
